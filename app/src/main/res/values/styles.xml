<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TVHeadline" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/radio_canada_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TVMainDescription" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/radio_canada_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TVAdditionalDescription" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/radio_canada_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>