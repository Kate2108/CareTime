<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TVHeadline" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/redhatdisplay_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TVMainDescription" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/redhatdisplay_medium</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TVAdditionalDescription" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/redhatdisplay_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>