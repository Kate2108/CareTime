<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/second_green</item>
        <item name="colorOnPrimary">@color/second_green</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/second_green</item>
        <item name="colorOnSecondary">@color/second_green</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/main_green</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/main_green</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="theme_switch_compat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/main_green</item>
        <item name="colorControlActivated">@color/main_green</item>
    </style>
</resources>