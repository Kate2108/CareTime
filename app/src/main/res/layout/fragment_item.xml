<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentItem"
    android:id="@+id/fragment_item"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        style="@style/TVHeadline"
        android:text="@string/sleep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_plus"
        android:src="@drawable/ic_baseline_more_24"
        android:background="@drawable/roundcorners"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:baselineAlignBottom="true"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_headline"
        app:layout_constraintEnd_toEndOf="parent"
        >
        </ImageButton>

    <ImageButton
        android:id="@+id/btn_minus"
        android:background="@drawable/roundcorners"
        android:src="@drawable/ic_baseline_less_24"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_headline"
        android:baselineAlignBottom="true"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus" />

    <LinearLayout
        android:id="@+id/ll_pb_and_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_headline">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="100"
            />

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="current/max"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/redhatdisplay_medium"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_pb_and_points"></LinearLayout>

    <TextView
        android:id="@+id/tv_headline_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats_headline"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/redhatdisplay_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_stats" />

    <TextView
        android:id="@+id/tv_dates_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17 may - 24 may"
        android:textSize="15sp"
        android:fontFamily="@font/redhatdisplay_medium"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_headline_stats"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_headline_stats" />

</androidx.constraintlayout.widget.ConstraintLayout>